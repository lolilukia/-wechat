<!--index.wxml-->  
<view class="swiper-tab">  
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">日常</view>  
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">特色</view>  
</view> 
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">  
    <!-- 日常 -->  
    <swiper-item>  
      <view class="daily">
        <view class="daily_act" bindtap="getDaily">
          <image src="../../images/daily.png" class="daily_img"></image>
          <text class="daily_date">{{daily_date}}</text>
          <text class="daily_type">{{daily_type}}</text>
          <image src="../../images/arrow.png" class="arrow"></image>
        </view>
      </view>  
    </swiper-item>  
    <!-- 特色 -->  
    <swiper-item>  
      <view class="daily">
        <view class="daily_act" wx:for="{{acts}}" wx:for-index="index" wx:for-item="item" wx:key="{{act_name}}" data-id="{{item.act_id}} "bindtap="getFeature">
          <image src="{{imgUrl[index]}}" class="daily_img"></image>
          <text class="daily_date">{{item.act_time}}</text>
          <text class="daily_type">{{item.name}}</text>
          <image src="../../images/arrow.png" class="arrow"></image>
        </view>
      </view>   
    </swiper-item>
</swiper> 