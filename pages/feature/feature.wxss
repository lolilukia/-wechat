page{
  background-color: #efefef;
}
.descrip{
  width: 94%;
  margin: 30rpx 3% 30rpx 3%;
  border-radius: 20rpx;
  background-color: #fff;
  border-top: #666 solid 6rpx;
}
.title{
  font-size: 40rpx;
}
.status{
  font-size: 30rpx;
  background-color:  #ff6100;
  margin-left: 25rpx;
  padding: 10rpx 15rpx;
  border-radius: 15rpx;
  color: #fff;
}
.name_con{
  padding: 20rpx 0rpx 10rpx 30rpx;
  color: #666;
}
.fea_time{
  padding: 5rpx 0rpx 5rpx 30rpx;
  color: #999;
  font-size: 30rpx;
}
.detail_con{
  margin: 20rpx 0;
  padding: 10rpx 30rpx;
}
.feature_detail{
  padding: 5rpx 0rpx 5rpx 30rpx;
  color: #333;
  font-size: 30rpx;
}
.image_con{
  margin: 5rpx 30rpx 5rpx 30rpx;
  height: 300rpx;
  overflow: hidden;
}
.gam_image{
  width: 100%;
}
.enroll{
  width: 94%;
  margin: 25rpx 3% 35rpx 3%;
  background-color: #fff;
  border-radius: 20rpx;
  justify-content: center;
  padding: 20rpx 0rpx 20rpx 0rpx;
  border-bottom: #666 solid 6rpx;
}
.sign_btn{
  margin-top: 30rpx;
  background-color: #ff6100;
  color: #fff;
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  border-radius: 100rpx;
}
.flex-wrp {
  display: flex;
  flex-direction:row;
  flex-wrap: nowrap;
}
.info_con{
  margin-top: 30rpx;
  justify-content: center;
  align-items: center;
  position: relative;
}
.signed{
  margin-top: 30rpx;
  background-color: #666;
  color: #fff;
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  border-radius: 100rpx;
}
.feature_info{
  text-decoration-line: underline;
  color: #666;
}